@page
@model AddCatModel

@{
   //TODO IsPost+Validation

}

<div class="jumbotron"><h2>Add Cat</h2></div>


<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <form method="post" enctype="multipart/form-data">
                    <legend>Add Cat</legend>
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input asp-for="cat.Name" type="text" class="form-control" id="inputName" aria-describedby="nameHelp" placeholder="Enter name">
                    </div>

                    <div class="form-group">
                        <label for="Breed">Breed</label>
                        <input asp-for="cat.Breed" type="text" class="form-control" id="inputBreed" aria-describedby="breedHelp" placeholder="Enter breed">
                    </div>
                    <div class="form-group">
                        <label for="Date">Birth date</label>
                        <input asp-for="cat.Birthdate" type="date" class="form-control" id="inputDate" aria-describedby="dateHelp" placeholder="Enter date (dd/mm/yyyy)">
                    </div>
                    <div class="form-group">
                        <label for="Weight">Weight</label>
                        <input asp-for="cat.Weight" type="number" class="form-control" id="inputWeight" aria-describedby="weightHelp" placeholder="Enter weight">
                    </div>
                    <div class="form-group">
                        <label for="Color">Color</label>
                        <input  asp-for="cat.Color" type="text" class="form-control" id="inputColor" aria-describedby="colorHelp" placeholder="Enter color">
                    </div>
                    <div class="form-group">
                        <label for="Picture">Picture URL</label>
                        <input  asp-for="cat.Picture" type="text" class="form-control" id="inputPicture" aria-describedby="pictureHelp" placeholder="Enter picture url">
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <div class="input-group">
                            <div class="input-group-addon">DKK</div>
                            <input asp-for="cat.Price" type="number" class="form-control" id="inputPrice" placeholder="Price">
                            <div class="input-group-addon">.00</div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>
